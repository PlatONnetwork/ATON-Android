<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_status_bar"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <com.platon.aton.component.widget.CommonTitleBar
            android:id="@+id/commonTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ctb_left_drawable="@drawable/icon_back_black"
            app:ctb_right_text="@string/save"
            app:ctb_right_text_color="@color/color_105cfe"
            app:ctb_title="@string/language" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/bg_transation_list_divider"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_switch_chinese"
            style="@style/Text.000.16"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/icon_hook_s"
            android:gravity="center_vertical|left"
            android:text="@string/chinese" />


        <TextView
            android:id="@+id/tv_switch_english"
            style="@style/Text.000.16"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/icon_hook_s"
            android:gravity="center_vertical|left"
            android:text="@string/english" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>


</LinearLayout>