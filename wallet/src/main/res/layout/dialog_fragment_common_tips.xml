<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_common_dialog_fragment"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="56dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/text_title"
            style="@style/Text.f5302c.16"
            android:layout_marginTop="14dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textStyle="bold"
            tools:text="Backup failed" />

        <TextView
            android:id="@+id/text_sub_title"
            style="@style/Text.105cfe.17"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textStyle="bold"
            tools:text="Backup failed" />

        <TextView
            android:id="@+id/text_content"
            style="@style/Text.000000.14"
            android:layout_marginTop="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="left"
            android:layout_gravity="left"
            tools:text="Please be sure to keep the mnemonic phrase in a safe place. ATON is not responsible for any loss of assets caused by forgeting, losting or theft." />

        <com.platon.aton.component.widget.ShadowButton
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            app:text="@string/understood"
            app:textAppearance="@style/MainButtonStyle"
            app:textBackground="@drawable/bg_main_button" />

        <TextView
            android:id="@+id/text_cancel"
            style="@style/Text.316def.14"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|top"
            android:paddingTop="8dp"
            tools:text="No" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_dialog_tips" />


</FrameLayout>


