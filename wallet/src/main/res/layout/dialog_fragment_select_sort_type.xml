<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_select_sort_type_dialog_fragment"
    android:divider="@drawable/bg_select_wallet_list_divider"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            style="@style/Text.000000.16"
            android:layout_centerInParent="true"
            android:text="@string/msg_sort"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_shut_down" />


    </RelativeLayout>

    <ListView
        android:id="@+id/list_sort_type"
        style="@style/List_common_style"
        android:layout_height="195dp"
        android:choiceMode="singleChoice"
        android:divider="@drawable/bg_select_wallet_list_divider"
        android:dividerHeight="1dp"
        tools:listitem="@layout/item_select_sort_type" />

</LinearLayout>