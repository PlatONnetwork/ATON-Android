<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/tv_total_assets_amount_title"
        style="@style/Text.000000.14"
        android:includeFontPadding="false"
        android:text="@string/msg_total_assets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_assets_amount_title"
        app:layout_constraintLeft_toRightOf="@id/tv_total_assets_amount_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_total_assets_amount_title">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_total_assets_amount"
            style="@style/Text.000000.18"
            android:drawableRight="@drawable/icon_open_eyes"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            app:autoSizeMaxTextSize="18sp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:lines="1"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:layout_constrainedWidth="true"
            tools:text="303444444444" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>