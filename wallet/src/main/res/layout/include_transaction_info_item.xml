        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_value_middle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0x602548231ba7e878485f3421affcbcebfaba47ae" />

    <TextView
        android:id="@+id/tv_wallet_address"
