<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific toAddress a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Dialog_FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_00000000</item>
        <item name="colorPrimaryDark">@color/color_00000000</item>
        <item name="colorAccent">@color/color_00000000</item>
        <item name="android:windowBackground">@color/color_88000000</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="Dialog_AddWallet" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_1b2137</item>
        <item name="colorPrimaryDark">@color/color_1b2137</item>
        <item name="colorAccent">@color/color_1b2137</item>
        <item name="android:windowBackground">@color/color_1b2137</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <!-- photo dailog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#FFF</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_Progressbar_circle1">
        <item name="android:indeterminateDrawable">@drawable/pb_circle</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxWidth">64dp</item>
        <item name="android:maxHeight">64dp</item>
    </style>

    <style name="Animation_slide_in_bottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="Animation_slide_in_top" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>

    <!-- 自定义对话框风格 -->
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景变暗 默认是根据windowIsFloating来决定的-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Animation.CommonDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_common_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_common_exit</item>
    </style>


    <style name="AnimationArrowLeft">
        <item name="android:windowEnterAnimation">@anim/pop_show_left</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_left</item>
    </style>

    <style name="AnimationArrowRight">
        <item name="android:windowEnterAnimation">@anim/pop_show_right</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_right</item>
    </style>

    <style name="AnimationArrowUp">
        <item name="android:windowEnterAnimation">@anim/pop_show_up</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_up</item>
    </style>

    <style name="AnimationArrowDown">
        <item name="android:windowEnterAnimation">@anim/pop_show_down</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_down</item>
    </style>

    <style name="AnimationArrowNone">
        <item name="android:windowEnterAnimation">@anim/pop_show_center</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_center</item>
    </style>

    <style name="AnimationNone">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="List_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@color/color_00000000</item>
        <item name="android:cacheColorHint">@color/color_00000000</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="SeekBarStyle" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/bg_seekbar</item>
        <item name="android:thumb">@drawable/icon_seekbar_thumb</item>
    </style>
    <style name="Activity_Translucent">
        <item name="android:windowBackground">@color/color_00000000</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationNone</item>
    </style>

</resources>
